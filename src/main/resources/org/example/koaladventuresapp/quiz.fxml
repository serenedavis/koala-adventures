<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="org.example.koaladventuresapp.QuizController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="700.0"
            style="-fx-background-color: #ffd3e6;">

    <children>

        <VBox spacing="12"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="30.0"
              AnchorPane.rightAnchor="30.0"
              AnchorPane.bottomAnchor="30.0"
              AnchorPane.leftAnchor="220.0"
              style="-fx-background-color: #ffe6f3;
                     -fx-background-radius: 30;
                     -fx-border-radius: 30;
                     -fx-border-color: #ff4b96;
                     -fx-border-width: 2;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.2, 0, 4);">

            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <children>

                <Label fx:id="questionLabel"
                       wrapText="true"
                       prefWidth="520"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #b0005a;
                              -fx-alignment: center;"/>

                <Label fx:id="scoreLabel"
                       visible="false"
                       managed="false"
                       wrapText="true"
                       prefWidth="520"
                       style="-fx-font-size: 18px;
                              -fx-text-fill: #6a1b3f;
                              -fx-alignment: center;"/>

                <ImageView fx:id="victoryGif"
                           fitWidth="140"
                           preserveRatio="true"
                           visible="false"
                           managed="false"
                           pickOnBounds="true"
                           smooth="true"
                           cache="true">
                </ImageView>

                <Label fx:id="infoLabel"
                       visible="false"
                       wrapText="true"
                       prefWidth="360"
                       maxWidth="360"
                       textAlignment="CENTER"
                       alignment="CENTER"
                       style="-fx-font-size: 10px;
                              -fx-text-fill: #5a1840;
                              -fx-alignment: center;
                              -fx-label-padding: 10 20 10 20;"/>

                <VBox spacing="10" prefWidth="400">
                    <children>
                        <Button fx:id="choiceA"
                                onAction="#chooseA"
                                prefWidth="400"
                                style="-fx-background-color: white;
                                       -fx-text-fill: #c2185b;
                                       -fx-font-size: 16px;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;
                                       -fx-border-color: #c2185b;
                                       -fx-border-width: 2;
                                       -fx-padding: 8 16 8 16;"/>

                        <Button fx:id="choiceB"
                                onAction="#chooseB"
                                prefWidth="400"
                                style="-fx-background-color: white;
                                       -fx-text-fill: #c2185b;
                                       -fx-font-size: 16px;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;
                                       -fx-border-color: #c2185b;
                                       -fx-border-width: 2;
                                       -fx-padding: 8 16 8 16;"/>

                        <Button fx:id="choiceC"
                                onAction="#chooseC"
                                prefWidth="400"
                                style="-fx-background-color: white;
                                       -fx-text-fill: #c2185b;
                                       -fx-font-size: 16px;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;
                                       -fx-border-color: #c2185b;
                                       -fx-border-width: 2;
                                       -fx-padding: 8 16 8 16;"/>

                        <Button fx:id="choiceD"
                                onAction="#chooseD"
                                prefWidth="400"
                                style="-fx-background-color: white;
                                       -fx-text-fill: #c2185b;
                                       -fx-font-size: 16px;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;
                                       -fx-border-color: #c2185b;
                                       -fx-border-width: 2;
                                       -fx-padding: 8 16 8 16;"/>
                    </children>
                </VBox>

                <HBox spacing="10"
                      alignment="CENTER_LEFT"
                      prefWidth="400">
                    <children>
                        <Button fx:id="backButton"
                                text="Restart"
                                onAction="#restartQuiz"
                                style="-fx-background-color: #f06292;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;
                                       -fx-padding: 6 14 6 14;"/>

                        <Button fx:id="nextButton"
                                text="Next"
                                onAction="#nextQuestion"
                                style="-fx-background-color: #ffffff;
                                       -fx-text-fill: #c2185b;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;
                                       -fx-border-color: #c2185b;
                                       -fx-border-width: 2;
                                       -fx-padding: 6 14 6 14;"/>

                        <Label fx:id="feedbackLabel"
                               prefWidth="250"
                               wrapText="true"
                               style="-fx-text-fill: #6a1b3f;
                                      -fx-font-size: 14px;"/>
                    </children>
                </HBox>

            </children>
        </VBox>

        <ImageView fx:id="koalaGif"
                   fitWidth="150"
                   preserveRatio="true"
                   pickOnBounds="true"
                   AnchorPane.bottomAnchor="15.0"
                   AnchorPane.leftAnchor="15.0"/>

    </children>
</AnchorPane>
